{
    "extends": [
        "standard",
        "plugin:vue/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "vue/require-default-prop": [
            "error",
            {
                "required": false,
                "non-required": false
            }
        ],
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": 1,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": false
                }
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": false,
                "ignores": []
            }
        ],
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.vue"
            ],
            "rules": {
                "indent": "off"
            }
        }
    ],
    "globals": {
        "_": true,
        "app": true,
        "axios": true,
        "flash": true,
        "State": true,
        "Vue": true
    }
}
